{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "rootDir": "./src",
        "moduleResolution": "node",
        "declaration": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "preserveSymlinks": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictNullChecks": false,
        "skipLibCheck": true
    },
    "exclude": [
        "test/",
        "voby/",
        "web/*",
        "vite.config.ts",
        "vite.config.*.ts"
    ]
}